@model InterpolAlertApi.Models.Autore

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica Autore</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="AutoreId" hidden />
            <div class="form-group">
                <label asp-for="NomeAutore" class="control-label"></label>
                <input asp-for="NomeAutore" class="form-control" />
                <span asp-validation-for="NomeAutore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pericolosita" class="control-label"></label>
                <input asp-for="Pericolosita" class="form-control" />
                <span asp-validation-for="Pericolosita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoteVarie" class="control-label"></label>
                <input asp-for="NoteVarie" class="form-control" />
                <span asp-validation-for="NoteVarie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fazione">Fazione</label>
                @await Component.InvokeAsync("FazioniList")
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

