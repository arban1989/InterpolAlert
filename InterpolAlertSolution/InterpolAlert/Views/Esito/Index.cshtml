@model IEnumerable<InterpolAlertApi.Dtos.EsitoDto>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-success">@ViewBag.SuccessMessage</h2>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h1>Lista Esiti</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeEsito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeEsito)
                </td>
                <td>
                    <form asp-action="Delete" asp-route-esitoId="@item.EsitoId" method="post">
                        <a class="btn btn-sm btn-primary" asp-controller="Esito" asp-action="Edit" asp-route-esitoId="@item.EsitoId">Modifica</a>
                        <button class="btn btn-sm btn-danger" type="submit"
                                new { onclick="return confirm('Sei sicuro di voler eliminare @item.NomeEsito?');">
                            Elimina
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
