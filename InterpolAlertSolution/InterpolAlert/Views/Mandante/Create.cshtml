@model InterpolAlert.ModelsForView.MandanteViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Aggiungi Mandante</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeMandante" class="control-label"></label>
                <input asp-for="NomeMandante" class="form-control" />
                <span asp-validation-for="NomeMandante" class="text-danger"></span>
            </div>
            <div class="form-group">
                @await Component.InvokeAsync("FazioniList")
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

