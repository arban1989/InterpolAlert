@model InterpolAlertApi.Models.Mandante

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica Mandante</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="MandanteId" hidden />
            <div class="form-group">
                <label asp-for="NomeMandante" class="control-label"></label>
                <input asp-for="NomeMandante" class="form-control" />
                <span asp-validation-for="NomeMandante" class="text-danger"></span>
            </div>
            <div class="form-group">
                @await Component.InvokeAsync("FazioniList")
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

